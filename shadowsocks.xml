<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.2" method="upgrade">
	<name>COM_SHADOWSOCKS</name>
	<creationDate>18th September, 2018</creationDate>
	<author>Jibon L. Costa</author>
	<authorEmail>support@mynaparrot.com</authorEmail>
	<authorUrl>https://www.mynaparrot.com</authorUrl>
	<copyright>Copyright (C) MynaParrot 2018. All Rights Reserved</copyright>
	<license>MIT</license>
	<version>1.0.3</version>
	<description><![CDATA[
		<h1>Shadowsocks (v.1.0.3)</h1>
		<div style="clear: both;"></div>
		<p>Joomla component for managing Shadowsocks using Shadowsocks  Restful Api</p>
		<p>Created by <a href="https://www.mynaparrot.com" target="_blank">Jibon L. Costa</a><br /><small>Development started 14th August, 2018</small></p>
	]]></description>

	<!-- Runs on install; New in Joomla 1.5 -->
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>

	<!-- Runs on uninstall; New in Joomla 1.5 -->
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>

	<!-- Runs on install/uninstall/update; New in Joomla 2.5 -->
	<scriptfile>script.php</scriptfile>

	<media destination="com_shadowsocks" folder="media">
		<filename>index.html</filename>
		<folder>js</folder>
		<folder>css</folder>
		<folder>images</folder>
	</media>

	<!-- Update Schema; New in Joomla 2.5 -->
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql/</schemapath>
		</schemas>
	</update>

	<files folder="site">
		<filename>controller.php</filename>
		<filename>index.html</filename>
		<filename>router.php</filename>
		<filename>shadowsocks.php</filename>
		<folder>assets</folder>
		<folder>helpers</folder>
		<folder>controllers</folder>
		<folder>models</folder>
		<folder>views</folder>
		<folder>layouts</folder>
	</files>

	<languages folder="site">
		<language tag="en-GB">language/en-GB/en-GB.com_shadowsocks.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.com_shadowsocks.sys.ini</language>
	</languages>

	<administration>
		<menu>COM_SHADOWSOCKS_MENU</menu>
		<submenu>
			<!-- Instead of link you can specify individual link attributes -->
			<menu option="com_shadowsocks" view="servers">COM_SHADOWSOCKS_MENU_SERVERS</menu>
			<menu option="com_shadowsocks" view="packages">COM_SHADOWSOCKS_MENU_PACKAGES</menu>
			<menu option="com_shadowsocks" view="users">COM_SHADOWSOCKS_MENU_USERS</menu>
		</submenu>
		<files folder="admin">
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>###WHMCS_ENCRYPT_FILE###
			<filename>index.html</filename>
			<filename>shadowsocks.php</filename>
			<folder>assets</folder>
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<folder>layouts</folder>
		</files>

		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.com_shadowsocks.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_shadowsocks.sys.ini</language>
		</languages>

	</administration>
	<updateservers>
		<server type="extension" enabled="1" element="com_shadowsocks" name="Shadowsocks">https://raw.githubusercontent.com/jibon57/com_shadowsocks/master/update.xml</server>
	</updateservers>
</extension>